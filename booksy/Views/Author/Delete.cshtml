@model Booksy.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>

<h3>Are you sure you want to delete this author?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Biography
        </dt>
        <dd class="col-sm-10">
            @Model.Biography
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Author Image" style="max-width: 100px; max-height: 100px;" />
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Author" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
