@model IEnumerable<Booksy.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<div class="authors-container" style="margin-top: 100px;">
    <h1>Authors</h1>

    <p class="create-author-btn">
        <a asp-controller="Author" asp-action="Create" class="btn btn-primary">Create New Author</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Biography</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Biography</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="Author Image" class="author-img" />
                            }
                        </td>
                        <td>
                            <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-success btn-sm">Edit</a>
                            <a asp-controller="Author" asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-info btn-sm">Details</a>
                            <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
