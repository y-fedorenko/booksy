@using System.Linq
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/style.css" />

<div class="hero-section">
    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="content" style="margin-top: 35px;">
                    <h1>Explore Endless Stories at Booksy</h1>
                    <p>Discover your next great read at Booksy, where stories come alive and every page turns into an adventure.</p>
                    <a href="#" class="cta-button">See what we do</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="image-container">
                    <img src="https://images.pexels.com/photos/2908984/pexels-photo-2908984.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Helping Canadians Live Life Well" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="back">
    <h3>Books</h3>
    <div class="books">
        @{
            int bookCount = 0;
            foreach (var book in Model.Books) {
                if (bookCount++ >= 10) break;
                @await Html.PartialAsync("_BookPartial", (object)book)
            }
        }
    </div>
</div>

<h3 class="author-title">Authors</h3>
<div class="authors">
    @{
        int authorCount = 0;
        foreach (var author in Model.Authors) {
            if (authorCount++ >= 10) break;
            @await Html.PartialAsync("_AuthorPartial", (object)author)
        }
    }
</div>
