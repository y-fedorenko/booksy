@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/style.css" />

<div class="hero-section">
    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="content" style="margin-top: 35px;">
                    <h1>Helping Canadians Live Life Well</h1>
                    <p>You may know us as your favourite grocery chain, but did you know we're also innovators across lifestyle, wellness, finance, and rewards?</p>
                    <a href="#" class="cta-button">See what we do</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="image-container">
                    <img src="https://images.unsplash.com/photo-1457369804613-52c61a468e7d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Helping Canadians Live Life Well" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="back">
<h3>Books</h3>
<div class="books">
    @foreach (var book in Model.Books)
    {
        @await Html.PartialAsync("_BookPartial", (object)book)
    }
</div>
</div>

<h3>Authors</h3>
<div class="authors-container">
    @foreach (var author in Model.Authors)
    {
        @await Html.PartialAsync("_AuthorPartial", (object)author)
    }
</div>
