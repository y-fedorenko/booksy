@model Booksy.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>
<p>Are you sure you want to delete this comment?</p>

<form asp-action="DeleteCommentConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.CommentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-bookId="@Model.BookId" class="btn btn-secondary">Cancel</a>
</form>
