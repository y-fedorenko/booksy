@model CommentViewModel

@{
    ViewData["Title"] = "Add Comment";
}

<h2>Add Comment</h2>

<form asp-action="CreateComment" method="post">
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label asp-for="CommentText">Comment</label>
        <textarea asp-for="CommentText" class="form-control"></textarea>
        <span asp-validation-for="CommentText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName">Your Name</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
