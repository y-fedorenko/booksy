@model Booksy.Models.Book

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>
<p>@Model.Description</p>

<h3>Comments</h3>
<ul>
    @foreach (var comment in Model.Comments)
    {
        <li>
            <strong>@comment.UserName:</strong> @comment.CommentText
        </li>
    }
</ul>

<a href="@Url.Action("AddComment", new { BookId = Model.BookId })" class="btn btn-primary">Add Comment</a>
