@model Serie

@{
    ViewData["Title"] = "Create Series";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    <div class="form-group" style="margin-top:70px">
        @Html.LabelFor(model => model.SeriesName)
        @Html.TextBoxFor(model => model.SeriesName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SeriesName)
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.SeriesDescription)
        @Html.TextAreaFor(model => model.SeriesDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SeriesDescription)
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
    <a asp-action="Index" class="btn btn-secondary" style="margin-top:10px">Cancel</a>
}
